<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.whackyard.mytest.AnimationActivity"
    android:weightSum="5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/liya"
        android:id="@+id/ivLiya"
        android:layout_weight="5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="Rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRotation"
            android:layout_weight="1"
            android:onClick="doAnimate"/>

        <Button
            android:text="Zoom In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnZmIn"
            android:layout_weight="1"
            android:onClick="doAnimate"/>

        <Button
            android:text="Zoom Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnZmOt"
            android:layout_weight="1"
            android:onClick="doAnimate"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="Alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAlpha"
            android:layout_weight="1"
            android:onClick="doAnimate"/>

        <Button
            android:text="Move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMove"
            android:layout_weight="1"
            android:onClick="doAnimate"/>

        <Button
            android:text="Sllide D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSlide"
            android:layout_weight="1"
            android:onClick="doAnimate"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="Mix It Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMix"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:onClick="doAnimate"/>
    </LinearLayout>

</LinearLayout>
